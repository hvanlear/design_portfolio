---
interface Props {
  title?: string;
  color: string;
  mod?: string;
}

const { title, color, mod } = Astro.props;
---

<span style={`--color: ${color};`} class="project-cat">
  <p class={mod === "light-font" ? "text-sans" : "text-sans-bold"}>{title}</p>
</span>

<style>
  span.project-cat {
    box-shadow: 5px 5px 0 var(--color);
    background-color: var(--clr-white);
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 2px solid var(--clr-primary-bg);
    border-radius: 4px;
    transition: all;
    transition-duration: 0.5s;
    animation: ease-in-out;
  }

  span.project-cat > p {
    font-size: 0.7rem;
  }

  @media (min-width: 725px) {
    span.project-cat > p {
      font-size: 1rem;
    }
  }

  span.project-cat:hover {
    box-shadow: 3px 3px 0 var(--color);
    background-color: var(--clr-white);
  }
  p {
    color: var(--clr-primary-bg);
  }
</style>
