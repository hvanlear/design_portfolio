---
import ToolCard from "./Tool-Card.astro";
let tools = Astro.props.tools;
let threeCol = Astro.props.threeCol || false; // Default to false if no threeCol prop is provided
---

<div class={`container-tools ${threeCol ? "three-columns" : ""}`}>
  {
    tools.map((tool) => (
      <ToolCard
        url={tool.url}
        title={tool.title}
        content={tool.content}
        lg={tool.lg}
      />
    ))
  }
</div>

<style>
  .container-tools {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    column-gap: 1rem;
    row-gap: 2rem;
    order: 1;
    margin: 2rem 0;
  }

  .container-tools.three-columns {
    grid-template-columns: repeat(3, 1fr);
  }

  @media (min-width: 1000px) {
    .container-tools {
      order: 0;
    }
  }
</style>
