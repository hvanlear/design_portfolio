---
interface Props {
  image: {
    src;
    width: number;
    height: number;
    thumbnail: string;
  };
  figcap?: string;
  border?: boolean;
  borderColor?: string;
}

const { image, figcap, border, borderColor }: Props = Astro.props;
---

<script>
  import "photoswipe/style.css";
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  const lightbox = new PhotoSwipeLightbox({
    gallery: "#my-gallery",
    children: "a",
    pswpModule: () => import("photoswipe"),
  });
  lightbox.init();
</script>

<div class="pswp-gallery pswp-gallery--single-column" id="my-gallery">
  <a
    href={image.src}
    data-pswp-width={image.width}
    data-pswp-height={image.height}
    target="_blank"
  >
    {
      border ? (
        <span style={`--color: ${borderColor};`} class="image-border">
          <img src={image.thumbnail} alt="" class="pswp-thumb" loading="lazy" />
        </span>
      ) : (
        <img src={image.thumbnail} alt="" class="pswp-thumb" loading="lazy" />
      )
    }
    <figcaption>{figcap}</figcaption>
  </a>
</div>

<style>
  figcaption {
    font-size: 1rem;
  }

  span.image-border {
    filter: drop-shadow(5px 5px 0 var(--color));
    background-color: var(--clr-white);
    display: inline-block;
    padding: 0.5rem 0.5rem;
    border: 3px solid black;
    transition: all;
    transition-duration: 0.5s;
    animation: ease-in-out;
  }
  span.image-border:hover {
    filter: drop-shadow(3px 3px 0 var(--color));
    background-color: var(--clr-white);
  }

  .pswp-thumb {
    cursor: zoom-in;
    border-radius: 2px;
  }

  .pswp-gallery {
    display: flex;
    align-items: center;
  }

  @media (min-width: 725px) {
    span.image-border {
      filter: drop-shadow(10px 10px 0 var(--color));
      padding: 1rem 1rem;
    }
  }
</style>
