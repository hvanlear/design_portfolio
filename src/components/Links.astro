---
interface Props {
	linkTitles: Array<any>
}

const { linkTitles } = Astro.props
---

<ul class="links-list justify-between">
	{
		linkTitles.map((link) => (
			<li class="link text-4xl md:text-5xl lg:text-7xl">
				<a target={link.target} href={link.url}>
					{link.title}
				</a>
			</li>
		))
	}
</ul>

<style>
	.links-list,
	.link {
		/* font-family: "Signifier", "Times New Roman", Times, serif; */
		font-family: 'Cormorant Garamond', serif;
		/* font-family: "Sohne-Extraleicht", "Times New Roman", Times, serif; */
		/* font-family: Georgia, "Times New Roman", Times, serif; */
		/* font-family: "Heldane", "Times New Roman", Times, serif; */
		font-weight: 300;
	}

	.links-list {
		display: flex;
		flex-direction: row;
		height: 20rem;
	}

	.link {
		text-decoration: none;
		position: relative;
		width: fit-content;
	}

	.link::before {
		content: '';
		background-color: var(--clr-blurple);
		position: absolute;
		left: 0;
		bottom: 3px;
		width: 100%;
		height: 8px;
		z-index: -1;
		transition: all 0.3s ease-in-out;
		opacity: 0.9;
	}

	.link:hover::before {
		bottom: 0;
		height: 50%;
		width: 105%;
		background-color: var(--clr-blurple);
		/* background-image: linear-gradient(
      to right,
      rgba(255, 0, 0, 0),
      rgba(255, 0, 0, 1)
    );
    opacity: 1; */
		/* border-radius: 8px; */
	}

	/* ANIMATIONS */

	@keyframes transitionIn {
		from {
			opacity: 0;
			transform: translateY(10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes transitionLeft {
		0% {
			opacity: 0;
			transform: translateX(-5px);
		}
		80% {
			transform: translateX(3px);
		}
		100% {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@media screen and (min-width: 310px) {
		.links-list {
			flex-direction: column;
			align-items: center;
			justify-content: space-evenly;
		}
	}
	@media screen and (min-width: 1051px) {
		.links-list {
			flex-direction: row;
			align-items: center;
			justify-content: space-between;
		}
	}
</style>

