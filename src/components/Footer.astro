<style>
	.footer-content {
		width: 100%;
		font-size: 1.2rem;
		font-family: 'Sohne-Halbfett', sans-serif;
	}

	.location-details {
		font-family: 'Sohne-Leicht', sans-serif;
	}

	.location-details > .text-serif-2 {
		font-size: 1.8rem;
	}

	.link-footer {
		text-decoration: underline 0.1em rgb(255, 255, 255);
		text-underline-offset: 0.2em;
		transition:
			text-decoration-color 300ms,
			text-underline-offset 300ms;
	}

	.link-footer:hover {
		text-underline-offset: 0.4em;
	}

	.logo-lg {
		font-size: 3rem;
		font-weight: 600;
		color: white;
	}

	.email-greeting {
		font-family: 'Signifier', 'Times New Roman', Times, serif;
		font-size: 1.8rem;
	}

	.mail-plane {
		transition: all 0.6s ease-in-out;
	}

	.address-container:hover ~ .email-greeting > .mail-plane {
		fill: var(--blurple);
		transform: translatey(-15px) translatex(16px);
	}

	@media screen and (min-width: 310px) {
		.footer-contianer-top {
			flex-direction: column;
			gap: 2rem;
		}
		.footer-contianer-bottom {
			flex-direction: column;
			gap: 2rem;
		}
		.footer-container-bottom-location-email {
			display: flex;
			justify-content: space-between;
		}
		.logo-lg {
			font-size: 2rem;
		}

		.footer-links {
			gap: 2rem;
		}

		.location-details {
			width: 100%;
			display: flex;
			gap: 3rem;
		}

		.cords {
			display: flex;
			flex-direction: column;
		}

		.link-footer {
			text-decoration: underline 0.1em rgb(255, 255, 255);
			text-underline-offset: 0.2em;
		}
	}

	@media screen and (min-width: 740px) {
		.footer-contianer-top {
			flex-direction: row;
			align-items: center;
		}
		.logo-lg {
			font-size: 3rem;
		}

		.footer-links {
			gap: 1.5rem;
		}
	}
</style>
