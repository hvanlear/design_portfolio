---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Link from "../components/General/Link.astro";
import SubHeader from "../components/General/Sub-Header.astro";
import Divider from "../components/General/Divider.astro";
import Links from "../components/Links.astro";
import Footer from "../components/Footer.astro";
import ProjectItem from "../components/Project/Project-Item.astro";

import Dribbble from "../components/Design/Dribbble.astro"
---

<Layout title="Hunter Van Lear">
  <Header />
  <main class="container flex flex-col items-center">
    <Divider />
    <section class="hero-section container mt-8">
      <article class="container">
        <div class="container-name">
          <h1
            class="container-name__text byline text-sans-bold flex flex-row"
          >
            <span>Hunter</span>
            <span class="ml-3">Van Lear</span>
          </h1>
        </div>
        <h2 class="byline mt-8 text-sans-reg">
          Welcome! I'm a Developer and Designer, <br />
           building things for the internet in Raleigh, NC
        </h2>
        <Link text="my resume" url="" />
      </article>
    </section>
    <Divider />
    <section class="container mt-8 mb-4รงรง" id="links-section">
      <SubHeader text="Projects" />
      <div class="project-container space-y-20 flex flex-col justify-center sm:mt-8 mb-4">
        <ProjectItem
          color="#FFC850"
          title="Stephen King API"
          description="The horror master + structred JSON."
          url="#"
        />
        <ProjectItem
          color="#05B4FF"
          imageOnLeft
          title="Stephen King API"
          description="Development"
          url="#"
        />
      </div>
    </section>
    <Divider />
    <section class="container mt-8">
      <SubHeader text="Design" />
      <Dribbble/>
    </section>
  </main>
  <footer id="footer">
    <Footer />
  </footer>
</Layout>

<style>
  main {
    min-height: 85vh;
    margin: auto;
    padding: 1rem;
    /* max-width: calc(100% - 2rem); */
    color: var(--clr-white);
    font-size: 20px;
    line-height: 1.6;
    animation: transitionIn 1s;
  }

  #links-section {
    width: 100%;
    height: 100%;
    max-width: 162rem;
    box-sizing: content-box;
    height: 100%;
  }



  .container-name__text > span {
    font-size: 5rem;
    line-height: 0.8;
  }

  .byline {
    padding: 0.1rem 0;
    animation-delay: 1s;
    animation: transitionLeft 1s;
    font-size: 3rem;
    line-height: 1;
  }

  @media (max-width:1000px){
    .container-name__text > span {
      font-size: 8.06vw;
    }

    .byline{
      font-size: 5.06vw;
    }
  }

  .stagger {
    animation: transitionLeft 1.3s;
  }

  /* ANIMATIONS */

  @keyframes transitionIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes transitionLeft {
    0% {
      opacity: 0;
      transform: translateX(-5px);
    }
    80% {
      transform: translateX(3px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @media (min-width: 768px) {
    #links-section {
      flex-direction: row;
    }
  }
</style>
