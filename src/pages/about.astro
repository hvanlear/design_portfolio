<style>
	/* PAGE SPECIFIC STYLING
    TODO - 
    - Consolidate the stying for the basic frame. 
    - Clean this CSS UP

    */

	.page-sect-heading {
		font-size: 3.75rem;
	}

	.expert-card {
	}

	.expert-svg {
		width: 3rem;
		stroke-width: 2;
	}

	.expert-header {
		font-size: 2.2rem;
	}

	.card-content {
		color: var(--clr-off-white-3);
		font-size: clamp(0.4rem, calc(1.3rem + 0.2 * ((100vw - 48rem) / 80)), 0.9rem);
	}

	/* PAGE SPECIFIC STYLING */

	.primary-container {
		min-height: 70vh;
		animation: transitionIn 1s;
	}

	.primary-container,
	.footer-container {
		margin: auto;
		padding: 1rem;
		/* max-width: calc(100% - 2rem); */
		color: var(--clr-white);
		font-size: 20px;
		line-height: 1.6;
	}

	footer {
		width: 100%;
		/* background-color: #2e323b; */
		background-color: #0f1116;
	}

	#links-section {
		width: 100%;
	}

	.hero-text {
		font-family: 'Sohne-Leicht', sans-serif;
		color: var(--clr-off-white-3);
	}

	.byline {
		padding: 0.1rem 0;
		animation-delay: 1s;
		animation: transitionLeft 1s;
	}

	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}

	/* ANIMATIONS */

	@keyframes transitionIn {
		from {
			opacity: 0;
			transform: translateY(10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes transitionLeft {
		0% {
			opacity: 0;
			transform: translateX(-5px);
		}
		80% {
			transform: translateX(3px);
		}
		100% {
			opacity: 1;
			transform: translateX(0);
		}
	}
</style>
